

handle_error() {
    echo "An error occurred on line $1"
    exit 1
}
trap 'handle_error $LINENO' ERR

if [ "-clear" == "$1" ]; then
    rm -rf bin bin-int
fi

if [ "-clear" == "$2" ]; then
    rm -rf bin bin-int
fi

clear 
premake5 gmake2
make

if [ "-exec" == "$1" ]; then
    ./bin/linux-x86_64-Debug/server/server
fi